<UserControl x:Class="SolutionSystemEquations.ViewSystemEquations"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SolutionSystemEquations"
             mc:Ignorable="d" 
             d:DesignHeight="100" Width="180">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Text" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <UniformGrid Name="uniformGrid" Rows="2" Columns="3">
        <local:Cell Grid.Row="1" Grid.Column="1"></local:Cell>
        <local:Cell Grid.Row="1" Grid.Column="2"></local:Cell>
        <TextBox Grid.Row="1" Grid.Column="3"></TextBox>
        <local:Cell Grid.Row="2" Grid.Column="1"></local:Cell>
        <local:Cell Grid.Row="2" Grid.Column="2"></local:Cell>
        <TextBox Grid.Row="2" Grid.Column="3"></TextBox>
    </UniformGrid>
</UserControl>
